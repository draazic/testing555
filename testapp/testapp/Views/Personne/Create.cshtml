@model testapp.Models.Personne

@{ ViewData["Title"] = "Create";
}

<h2>Create User</h2>

<div class="col-5 container">
    <form asp-action="Create">
        @*<div asp-validation-summary="All" class="text-danger"></div>*@
        <div class="form-group">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input type="text" asp-for="Name" class="form-control" id="exampleFormControlInput1">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Forname" class="form-label">Forname</label>
                <input type="text" asp-for="Forname" class="form-control" id="exampleFormControlInput1">
                <span asp-validation-for="Forname" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Age" class="form-label">Age</label>
                <input type="text" asp-for="Age" class="form-control" id="exampleFormControlInput1">
                <span asp-validation-for="Age" class="text-danger"></span>

            </div>

            <div class="mb-3">
                <label asp-for="BithDay" class="form-label">BirthDay</label>
                <input type="date" asp-for="BithDay" asp-format="{0:yyyy-MM-dd}" class="form-control" id="exampleFormControlInput1">
                <span asp-validation-for="BithDay" class="text-danger"></span>

            </div>



        </div>
        <div class="form-group">

            <input type="Submit" value="Create" class="btn btn-sm btn-primary" />
            <a class="btn btn-sm btn-danger" asp-area="" asp-controller="Personne" asp-action="Personne">Go to List</a>

        </div>
    </form>
</div>